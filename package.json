{
  "name": "ubv-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --watch . --ext js,json --exec node index.js",
    "build": "echo 'No build needed - pure JavaScript project'",
    "deploy": "npm install --production",
    "clean": "rm -rf node_modules",
    "clean:data": "rm -f data/*.json",
    "reinstall": "npm run clean && npm install",
    "test": "node index.js --dry-run 2>&1 | grep -q 'Logged in' && echo 'Bot connection test passed' || echo 'Bot connection test failed'",
    "migrate": "node scripts/migrate-to-sqlite.js",
    "backup": "./scripts/backup-database.sh",
    "db:info": "sqlite3 data/ubv-bot.db 'SELECT COUNT(*) as total_birthdays FROM birthdays'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^11.10.0",
    "discord.js": "^14.23.2",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "fs-extra": "^11.3.2",
    "node-cron": "^4.2.1"
  }
}
